<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>user</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.email %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'destroy', destroy_comment_path(@post, comment), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New comment', new_comment_post_path(@post) %>
